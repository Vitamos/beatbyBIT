            android:key="list_preference"
            android:summary="@string/summary_samplerate_preference"
            android:title="@string/title_samplerate_preference" />

    </PreferenceCategory>

    <Preference
        android:title="Record Directory"
        android:key="dirbutton"
        android:summary="Access the record directory"
        />
</PreferenceScreen>