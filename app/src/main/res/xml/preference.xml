<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">


    <PreferenceCategory android:title="@string/action_settings">

        <EditTextPreference
            android:dialogTitle="@string/dialog_title_changeMAC_preference"
            android:key="mac_preference"
            android:summary="@string/summary_changeMAC_preference"
            android:title="@string/action_changeMAC"

            />
        <ListPreference
            android:dialogTitle="@string/dialog_title_samplerate_preference"
            android:entries="@array/samplerate"
